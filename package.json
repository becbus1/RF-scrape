{
  "name": "nyc-hybrid-property-finder",
  "version": "2.0.0",
  "description": "Hybrid system using Redfin's public data + targeted scraping to find undervalued NYC properties",
  "main": "biweekly-streeteasy-sales.js",
  "scripts": {
    "start": "node biweekly-streeteasy-sales.js",
    
    "sales": "node biweekly-streeteasy-sales.js",
    "rentals": "node biweekly-streeteasy-rentals.js",
    "sales-test": "node biweekly-streeteasy-sales.js --neighborhood park-slope",
    "rentals-test": "node biweekly-streeteasy-rentals.js --neighborhood williamsburg",
    
    "test": "node test-scraper.js --test-only",
    "demo": "node test-scraper.js --demo-only",
    
    "analyze": "node hybrid-redfin-analyzer.js",
    "weekly-analysis": "node hybrid-supabase-integration.js",
    
    "setup-db": "node hybrid-supabase-integration.js --setup",
    "latest": "node hybrid-supabase-integration.js --latest",
    "distress": "node hybrid-supabase-integration.js --distress",
    "trends": "node hybrid-supabase-integration.js --trends", 
    "metrics": "node hybrid-supabase-integration.js --metrics",
    "cleanup": "node hybrid-supabase-integration.js --cleanup",
    
    "schedule": "node hybrid-scheduler.js",
    
    "legacy-find-deals": "node undervalued-property-finder.js",
    "legacy-daily": "node supabase-integration.js",
    "legacy-cron": "node cron-scheduler.js",
    
    "lint": "eslint *.js || echo 'ESLint not configured'"
  },
  "keywords": [
    "nyc",
    "new-york-city",
    "redfin",
    "real-estate",
    "undervalued-properties",
    "hybrid-analysis",
    "public-data",
    "targeted-scraping",
    "market-analysis",
    "property-investment",
    "distress-signals",
    "below-market",
    "weekly-analysis",
    "streeteasy",
    "rentals",
    "sales",
    "biweekly-analysis"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "@supabase/supabase-js": "^2.38.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nyc-hybrid-property-finder.git"
  },
  "config": {
    "analysis_schedule": "biweekly",
    "min_discount_percent": 15,
    "max_days_on_market": 90,
    "nyc_price_range": {
      "min": 300000,
      "max": 2500000
    },
    "description_enhancement": true,
    "public_data_sources": [
      "city_market_tracker",
      "zip_market_tracker", 
      "neighborhood_market_tracker",
      "weekly_housing_inventory"
    ],
    "streeteasy_config": {
      "api_calls_per_month": 10000,
      "neighborhoods_per_day": 3,
      "cache_duration_days": 30,
      "undervaluation_threshold": 10
    }
  }
}

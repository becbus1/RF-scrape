# Supabase Configuration (REQUIRED)
# Get these from your Supabase project dashboard: https://app.supabase.com
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Notification Webhook for NYC alerts
# Can be Slack webhook, Discord webhook, or any HTTP endpoint
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Optional: Email Configuration for NYC property alerts
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_RECIPIENTS=buyer1@email.com,buyer2@email.com

# NYC-Specific Scraping Configuration (optional - defaults will be used if not set)
MIN_DISCOUNT_PERCENT=15
MAX_DAYS_ON_MARKET=90

# NYC Borough-Specific Max Prices (optional)
MANHATTAN_MAX_PRICE=2500000
BROOKLYN_MAX_PRICE=1500000
QUEENS_MAX_PRICE=1200000
BRONX_MAX_PRICE=800000
STATEN_ISLAND_MAX_PRICE=900000

# Scraping Limits
SCRAPE_LIMIT=350

# NYC Boroughs to scrape (comma-separated, optional - defaults to all 5)
NYC_BOROUGHS=Manhattan NY,Brooklyn NY,Queens NY,Bronx NY,Staten Island NY

# Cron Schedule (optional - defaults will be used if not set)
# Times are in EST (New York timezone)
DAILY_MORNING_SCRAPE_CRON=0 6 * * *    # 6:00 AM EST
DAILY_EVENING_SCRAPE_CRON=0 19 * * *   # 7:00 PM EST  
WEEKLY_CLEANUP_CRON=0 2 * * 0          # Sunday 2:00 AM EST

# NYC Market Focus Settings
FOCUS_HIGH_VALUE_MANHATTAN=true
FOCUS_EMERGING_BROOKLYN=true
FOCUS_AFFORDABLE_QUEENS=true
INCLUDE_BRONX_DEALS=true
INCLUDE_STATEN_ISLAND=true

# Database Settings
CLEANUP_DAYS=30
MIN_SCORE_THRESHOLD=40

# Logging Level (optional)
LOG_LEVEL=info
